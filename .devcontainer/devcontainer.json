{
  "name": "genAIBiz",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && python -m pip install -U pip && python -m pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "settings": { "python.defaultInterpreterPath": ".venv/bin/python" },
      "extensions": [ "ms-python.python", "ms-toolsai.jupyter" ]
    }
  },
  "portsAttributes": {
    "8000": { "label": "Streamlit", "onAutoForward": "openBrowser" }
  },
  "forwardPorts": [8000]
}
